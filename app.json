{
  "expo": {
    "name": "sic-app",
    "slug": "sic-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.sic.outmate",
      "googleServicesFile": "./firebase/GoogleService-Info.plist",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "앱에서 음성 녹음을 하기 위해 마이크에 접근이 필요합니다."
      }
    },
    "android": {
      "package": "com.sic.outmate",
      "googleServicesFile": "./fierbase/google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
